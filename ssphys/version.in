#define PRODUCTVER_MAJOR  0
#define PRODUCTVER_MINOR  20
#define PRODUCTVER_MICRO  1
#define PRODUCTVER_REV    $WCREV$
#define PRODUCTVER_REVRANGE  $WCRANGE$

#define FILEVER_MAJOR     PRODUCTVER_MAJOR
#define FILEVER_MINOR     PRODUCTVER_MINOR
#define FILEVER_REV       PRODUCTVER_REV
#define FILEVER_MICRO     PRODUCTVER_MICRO
#define FILEVER_REVRANGE  PRODUCTVER_REVRANGE

#define FILEVER_REVDATE     "$WCDATE$"
#define FILEVER_REVMODIFIED $WCMODS?" (locally modified)":""$

#include <boost/preprocessor/stringize.hpp>

// FILEVER       will be e.g. "1,9,1,116"
// PRODUCTVER    will be e.g. "0,9,1,116"
// STRFILEVER    will be e.g. "1.9.1, Build 116"
// STRPRODUCTVER will be e.g. "0.9.1"



#define MAKE_VERSION(x, y, z, b)  x,y,z,b
// undefine VERSION passed on command line
#undef	VERSION
#define VERSION         MAKE_VERSION(FILEVER_MAJOR,FILEVER_MINOR,FILEVER_MICRO,FILEVER_REV)
#define VERSION_STRING  BOOST_PP_STRINGIZE(PRODUCTVER_MAJOR) "." BOOST_PP_STRINGIZE(PRODUCTVER_MINOR) "." BOOST_PP_STRINGIZE(PRODUCTVER_MICRO)

#define FILEVER        VERSION
#define PRODUCTVER     VERSION
#define STRFILEVER     VERSION_STRING ", Build " BOOST_PP_STRINGIZE(FILEVER_REVRANGE) FILEVER_REVMODIFIED "\0"
#define STRPRODUCTVER  VERSION_STRING "\0"
